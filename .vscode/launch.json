{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "stopAtEntry": false,
      "externalConsole": false,
      "cwd": "${workspaceFolder}",
      "program": "${fileDirname}\\${fileBasenameNoExtension}",
      "args": [
        "<${workspaceFolder}//input.txt",
        ">${workspaceFolder}//output.txt"
      ],
      "environment": [],
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\MingW\\MinGW\\bin\\gdb.exe",  
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Compile selected C++ file"
    }
  ]
}

